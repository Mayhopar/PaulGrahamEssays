import { getCollection } from "astro:content";

const essays = (await getCollection("essays"))
  .sort((a, b) => a.data.dateISO.localeCompare(b.data.dateISO));

const firstSlug = essays[0]?.data.slug;
const base = import.meta.env.BASE_URL;
